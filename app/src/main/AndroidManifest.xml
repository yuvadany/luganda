    package="bible.englishbible.lugandabible">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".NotesActivity"></activity>
        <activity android:name=".NotesViewActivity" />
        <activity android:name=".EditNotesActivity" />
        <activity android:name=".AddNotesActivity" />
        <activity
            android:name=".AudioActivity"
            android:label="@string/audio_activity" />
        <activity android:name=".SettingsActivity" />
        <activity android:name=".BookmarkActivity" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".PraisesActivity" />
        <activity android:name=".LyricsActivity" />
        <activity android:name=".SongsActivity" />
    </application>

</manifest>